extends layout

block content
  form(method="POST", action="/magnet")
    label(for="Magnet")
    input(type="text", id="Magnet", name="magnet", style="width: 200px")
    input(type="submit", name="submit", value="Get Magnet")

  - if (files && files.length)
    form(method="POST", action="/download")
      div
        input(type="submit", name="submit", value="Download")
        input(type="hidden", name="magnet", value="#{magnet}" style="width: 200px")
      ul(style="list-style-type: none; padding: 0px")   
        - each file in files
          li
            input(type="radio", name="filepath", value="#{file}") 
            label #{file}
